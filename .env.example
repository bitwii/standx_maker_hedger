# ==================== StandX Configuration ====================
# Solana Private Key (Base58 encoded) - Required for StandX
SOLANA_PRIVATE_KEY=your_solana_private_key_base58_here

# StandX API URLs (optional, defaults provided in config.json)
STANDX_BASE_URL=https://perps.standx.com
STANDX_AUTH_URL=https://api.standx.com

# ==================== Lighter Configuration ====================
# Lighter API Key Private Key - Required for Lighter
# This is the private key for your Lighter API key
API_KEY_PRIVATE_KEY=your_lighter_api_key_private_key_here

# Lighter Account Configuration
LIGHTER_ACCOUNT_INDEX=0
LIGHTER_API_KEY_INDEX=0

# ==================== Risk Management (Optional) ====================
# These override config.json settings if provided
MAX_POSITION_SIZE=1000.0
MAX_DAILY_LOSS=500.0
MIN_PROFIT_THRESHOLD=5.0

# ==================== Logging ====================
LOG_LEVEL=INFO
